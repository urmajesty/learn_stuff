<h1> Please Sign Up </h1>

<%= render partial: "layouts/errors", locals: { object: @learner } %>

<%= form_for @learner do |f| %>

 <%= f.label :username %>
 <%= f.text_field :username %>

 <%= f.label :email %>
 <%= f.email_field :email %>

 <%= f.label :password %>
 <%= f.password_field :password %>

 <%= f.submit "Sign Up" %>


 <% end %>