<!DOCTYPE html>
<html>
  <head>
    <title>Learn Stuff</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if logged_in? %>
  <nav class='navbar'>
  <%= link_to 'Logout', '/logout', method: :delete %>
  <%= link_to 'My Languages', languages_path , class:'button'%>
  <%= link_to 'Add a Language', new_language_path , class:'button'%>
  <%= link_to 'Add a Course', new_course_path , class:'button'%>
  <%= link_to 'All Courses', courses_path, class:'button' %>
  <%= link_to 'Add a Status', new_status_path, class:'button' %>
  <%= link_to 'All Statuses', statuses_path, class:'button' %>
</nav>
<% else %>
  <%= link_to 'Log In', login_path %>
  <%= link_to 'Back', '/logout', method: :delete %>
<% end %>
<div class='container'>
    <%= yield %>
    </div>
  </body>
</html>
